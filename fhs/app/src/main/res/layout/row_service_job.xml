<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="87dp">

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/rowImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin16dp"
    android:layout_marginBottom="@dimen/margin32dp"
    android:layout_marginStart="@dimen/margin16dp"
    android:layout_marginEnd="@dimen/margin16dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/bg_circle"
    android:gravity="center"
    android:text="W"
    android:textColor="@color/colorWhite"
    android:textSize="16sp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@id/rowImageView"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/rowTitle"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin16dp"
      android:fontFamily="sans-serif"
      android:lineSpacingExtra="8sp"
      android:textColor="#de062346"
      android:textSize="16sp"
      tools:text="#0644084984"/>

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/rowSubTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:lineSpacingExtra="6sp"
      android:textColor="#de000000"
      android:textSize="14sp"
      tools:text="West Bay"/>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="25dp"
      android:background="#6f82ad"/>


  </LinearLayout>

</RelativeLayout>